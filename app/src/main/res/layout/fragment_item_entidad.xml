<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dim_margin_bottom_item_cardview"
    app:cardBackgroundColor="@color/colorCardView"
    app:cardCornerRadius="@dimen/dim_radius_item_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_margin_item_cardview"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtIdEntidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IdEntidad"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entidad :"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtEntidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/ent_add_entidad" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Reg :"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtFechaRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado :"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="Estado" />

            <ImageButton
                android:id="@+id/imgbtnActiveEntidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <ImageButton
                android:id="@+id/imbtnEditEntidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/edit_icon_blue"
                android:src="@drawable/edit_icon_blue" />

            <ImageButton
                android:id="@+id/imgbtnDeleteEntidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trash_icon_red_24"
                android:src="@drawable/trash_icon_red_24"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>